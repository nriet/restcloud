FROM nriet/tomcat:8.5.82-jdk8-openjdk-slim-buster

MAINTAINER Axiu <itzyx@vip.qq.com>

ENV TZ PRC

COPY . /tmp

RUN cd /tmp && \
	du -sh *

ENV RESTCLOUD_WAR_URL https://etl.restcloud.cn/download/RestCloud-ETL-V3.2.war

 # thredds
 RUN apt-get update && \
    apt-get install -y --no-install-recommends net-tools wget unzip && \
    apt-get clean && \
	rm -rf /var/lib/apt/lists/* && \
	#RESTCLOUD
	wget -O ROOT.war "${RESTCLOUD_WAR_URL}" --no-check-certificate; \
	rm -rf /usr/local/tomcat/webapps/*  && \
	unzip ROOT.war -d /usr/local/webapps/ROOT/ && \
	rm -f ROOT.war
	
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

#COPY application.properties /usr/local/tomcat/webapps/ROOT/WEB-INF/classes/

EXPOSE 8080 8443

# Start container
CMD ["catalina.sh", "run"]

HEALTHCHECK --interval=10s --timeout=3s \
	CMD curl --fail 'http://localhost:8080/restcloud/view/page/index.html' || exit 1

